---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Text from "../components/Text.astro"; 

---
<MainLayout title="Titel">
<article class="gap-8 flex flex-col">
	 <!-- Billede her -->
<section
  class="relative w-full h-[800px] flex items-center justify-center bg-cover bg-center max-w-3xl mx-auto"
  style="background-image: url('/images/portrait.webp');"
> 
  <!-- Radial gradient overlay for blurred edges -->
  <div class="absolute inset-0 pointer-events-none"
       style="background: radial-gradient(circle, transparent 60%, var(--color-background) 100%);"></div>
  
  <!-- Tekstlag -->
  <div class="relative z-10 flex h-full items-center justify-center px-8">
    <div class="grid grid-cols-2 gap-x-1 gap-y-1 text-white max-w-md w-full mx-auto">

      <!-- Navn -->
      <Text stylingclasses="font-display text-xl uppercase">Maja</Text>
      <Text stylingclasses="font-display text-xl uppercase text-right">Estrup</Text>

      <!-- Titel -->
      <Text stylingclasses="font-display text-xl uppercase">Multi Media</Text>
      <Text stylingclasses="font-display text-xl uppercase text-right">Design</Text>

      <!-- Kontakt info -->
      <Text stylingclasses="font-display text-xl uppercase">Tel</Text>
      <Text stylingclasses="font-display text-xl uppercase text-right">+45 60628785</Text>

      <Text stylingclasses="font-display text-xl uppercase">Lip</Text>
      <Text stylingclasses="font-display text-xl uppercase text-right">Maja Estrup</Text>

      <Text stylingclasses="font-display text-xl uppercase">Web</Text>
      <Text stylingclasses="font-display text-xl uppercase text-right">EstrupLabs</Text>

      <!-- Adresseblok -->
      <div class="col-span-2 mt-4 space-y-1">
        <Text stylingclasses="font-display text-xl uppercase">Office</Text>
        <div class="grid grid-cols-2 gap-x-8">
          <Text stylingclasses="font-display text-xl uppercase">Christian</Text>
          <Text stylingclasses="font-display text-xl uppercase text-right">Ix Gade</Text>

          <Text stylingclasses="font-display text-xl uppercase">1, 3rd –</Text>
          <Text stylingclasses="font-display text-xl uppercase text-right">4th Floor</Text>

          <Text stylingclasses="font-display text-xl uppercase">1111</Text>
          <Text stylingclasses="font-display text-xl uppercase text-right">Copenhagen</Text>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <h1 class="mx-4">MY STYLE</h1>
  <div class="flex justify-center overflow-x-auto whitespace-nowrap gap-[5px] mx-4 md:grid md:grid-cols-4 md:grid-rows-2 md:gap-[5px] md:overflow-x-visible md:whitespace-normal md:place-items-center">
    <img src="/images/img_1.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_2.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_3.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_4.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_5.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_6.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_7.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
    <img src="/images/img_8.webp" alt="" class="w-full h-full object-cover filter grayscale hover:grayscale-0" />
  </div>
</section>

<section class="border-t border-r border-black border-solid px-4 py-6">
  <div class="flex justify-end">
    <div class="flex flex-col items-end max-w-lg space-y-4">
      <h1 class="text-right">APPROACH</h1>
      <Text stylingclasses="text-left">
        User-focused__ Collaborative__ Visual and aesthetic sense__
        Trend-aware & curious__ Unique designs__ Versatile__ 
        Adaptable__ Multifaced__ Dynamic__ Flexible__ Innovative__
        Inquisitive__  Open-minded__ Cross-functional__ Progressive__
      </Text>

      <h1 class="text-right">ASPIRATIONS</h1>
      <Text stylingclasses="text-left">
        To collaborate with leading media agencies and contribute to the development of high-impact campaigns; design visual communications such as posters, newsletters, and engaging social media content; stay consistently informed about emerging trends and integrate them into daily creative work; and, in the long term, build and lead a successful creative agency that combines innovative design with strategic vision.
      </Text>
      
      <h1 class="text-right">LANGUAGES</h1>
      <Text stylingclasses="text-left">
        Danish__ Native <br>English__ Fluent <br>Spanish_ Basic
      </Text>
    </div>
  </div>
</section>

<section class="border-l border-b border-black border-solid px-4 pt-6">
  <div class="grid grid-cols-2">
    <!-- Tekst øverst til venstre -->
    <div class="flex flex-col justify-start">
      <h1>SKILLS</h1>
      <Text>
        HTML__ CSS__ JavaScript__ GitHub__ Adobe Creative Suite__ Figma__<br>
        UX/UI Design Principles__ Visual Identity Design__<br>
        Concept Development__ Content Creation / Content Production__
      </Text>
    </div>
    <!-- Billede nederst til højre -->
    <div class="flex items-end justify-end">
      <img src="/svg/skills.svg" alt="" class="" />
    </div>
  </div>
</section>

<section class="justify-center items-center text-center space-y-4 px-4 py-40">
